@page
@model LibraryWeb.Areas.Identity.Pages.Account.Manage.BookManager.IndexModel

@{
    ViewData["Title"] = "Управление книгами";
}

<h1>Менеджер книг</h1>

<p>
    <a asp-page="./BookManager/Create">Добавить книгу</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Languages)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Book) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Img)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Languages)
            </td>
            <td>
                <a asp-page="./BookManager/Edit" asp-route-id="@item.ID">Редактировать</a> |
                <a asp-page="./BookManager/Details" asp-route-id="@item.ID">Подробности</a> |
                <a asp-page="./BookManager/Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
